<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Log NFC Status"
        android:onClick="lol"
        ></Button>
    <Button
        android:id="@+id/add_key"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Create new SQLite row"
        android:onClick="mkKeyPair"
        android:layout_below="@id/button_id"
        ></Button>
    <Button
        android:id="@+id/newuser"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mode: Tap to register a new account"
        android:onClick="newUserMode"
        android:layout_below="@id/add_key"
        ></Button>
    <Button
        android:id="@+id/login"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mode:Tap to unlock"
        android:onClick="loginMode"
        android:layout_below="@id/newuser"
        ></Button>

    <EditText
        android:id="@+id/usernameField"
        android:layout_below="@id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>